{% extends "_global/index.html" %}

{% block header %}{% include 'main/header.html.twig' %}{% endblock %}

{% block main %}

    <div class="row">
        <div class="col-12">
            <h3>Prijavi se za posao {{ job.name }}</h3>

            <div class="row">
                <div class="col-8">
                    <div id="success_messages" class="alert hidden" role="alert" ></div>
                </div>
            </div>

            <form action="" method="post" id="job_apply">
                <input type="hidden" value="{{ job.id }}" name="job_form[id]">

                <div class="form-group">
                    <label for="input_job_deadline">Planirani rok za zavrsetak:</label>
                    <input type="date" class="form-control" id="input_job_deadline" name="job_apply[deadline]" placeholder="MM/DD/YYYY">
                </div>
                <div class="form-group">
                    <label for="input_job_comment">Komentar:</label>
                    <textarea class="form-control" rows="3" id="input_job_comment" name="job_apply[comment]" placeholder="Unesite komentar"></textarea>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Prijavi se</button>
                    <button type="reset" class="btn btn-secondary">Odustani</button>
                </div>

            </form>


        </div>
    </div>

{% endblock %}