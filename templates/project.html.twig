{% extends "_global/index.html" %}

{% block header %}{% include 'main/header.html.twig' %}{% endblock %}

{% block main %}

    <h3 class="display-6">Novi projekat</h3>

    <form action="" method="POST" class="mt-5">

        <div class="form-group">
            <label for="input_project_name">Naziv projekta:</label>
            <input type="text" class="form-control" id="input_project_name" name="project_form[name]" required placeholder="Unesite naziv projekta"
            pattern=".*[^\s]{3,}.*">
        </div>
        <div class="form-group d-none">
            <label for="input_project_progress">Progress:</label>
            <input type="text" class="form-control" id="input_project_progress" name="job_form[progress]" required placeholder="Progres" value="0">
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Snimi</button>
            <button type="reset" class="btn btn-secondary">Odustani</button>
        </div>

    </form>

{% endblock %}